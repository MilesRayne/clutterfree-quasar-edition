{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "{45748bd3-6236-480c-a6eb-26757edd9266}"
    }
  },

  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },

  "permissions": ["storage", "tabs", "activeTab", "*://anilist.co/*"],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://anilist.co/*"],
      "css": ["assets/content.css"],
      "js": ["clutterfree.js", "content-hooks.js"]
    }
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "options_ui": {
    "page": "www/index.html#options",
    "open_in_tab": true
  },

  "web_accessible_resources": ["*://anilist.co/*"]
}
